<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btfirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="244dp"
        android:text="first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btsecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="second"
        app:layout_constraintEnd_toEndOf="@+id/btfirst"
        app:layout_constraintTop_toBottomOf="@+id/btfirst"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btthird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Third"
        app:layout_constraintStart_toEndOf="@+id/btsecond"
        app:layout_constraintTop_toTopOf="@+id/btsecond"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btFourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Fourth"
        app:layout_constraintBottom_toTopOf="@+id/btthird"
        app:layout_constraintEnd_toEndOf="@+id/btthird"
        app:layout_constraintTop_toTopOf="@+id/btfirst"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>